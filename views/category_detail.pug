extends layout

block content

  h1 Category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')

    p #[strong Description: ] #{category.description}

    h4 Associated Items

    dl
      each item in category_items
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}

      else
        p This category has no items associated with it.
  
  hr
  p 
    a(href=category.url+'/update') Update category
  p 
    a(href=category.url+'/delete') Delete category
