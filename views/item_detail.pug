extends layout

block content
  h1 Item: #{item.name}

  p #[strong Category: ]
    a(href=item.category.url) #{item.category.name}
  p #[strong Description:] #{item.description}

  div(style='margin-left:20px;margin-top:20px')
    h4 Available SKUs

    each val in item_instances
      hr
      p #[strong ID: ]
       a(href=val.url) #{val._id} 
       | - #{val.condition} $#{val.price}

    else
      p There are no available SKUs.

