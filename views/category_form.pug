extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Enter category name below:
      input#name.form-control(type='text', placeholder='CPUs, Monitors, Coolers, etc.' name='name' value=(undefined===category ? '' : category.name))
      label(for='name') Enter category description below:
      input#description.form-control(type='text', placeholder='This is the fanciest description ever.' name='description' value=(undefined===category ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
